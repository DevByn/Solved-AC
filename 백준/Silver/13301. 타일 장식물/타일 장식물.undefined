#include <bits/stdc++.h>
using namespace std;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    
    int n = 0;
    cin >> n;
    
    vector<int>dp(n+1,0);
    vector<int>dp_extent(n+1,0);
    
    dp[1]=1;
    
    dp_extent[1]=4;
    
    for(int i = 2; i <= n ;i++){
        dp[i] = dp[i-1] + dp[i-2];
        dp_extent[i] = dp_extent[i-1] + (2 * dp[i]);
    } 
    cout << dp_extent[n];
}