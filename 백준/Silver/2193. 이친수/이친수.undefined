#include <iostream>
#include <vector>
#include <algorithm>
#include <iostream>
using namespace std;

const long long INF = 4e18;

int main()
{
    int N;
    cin >> N;

    vector<vector<long long>>DP(N+1,vector<long long>(2,0));
    DP[1][1] = 1;

    if(N>=2){
        
    DP[2][0] = 1;

    for(int i = 2; i <= N-1; i++){
        DP[i+1][0] = DP[i][1] + DP[i][0];
        DP[i+1][1] = DP[i][0];}
    }

    cout << DP[N][0] + DP[N][1];
    
    return 0;
}

    
